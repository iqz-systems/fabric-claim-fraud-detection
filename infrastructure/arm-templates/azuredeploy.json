{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev",
        "prod"
      ],
      "metadata": {
        "description": "Environment name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply to all resources"
      }
    },
    "cognitiveServicesAccounts": {
      "type": "array",
      "metadata": {
        "description": "Array of Cognitive Services account configurations"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "comments": "This is a placeholder template. Use Deploy-ArmTemplate.ps1 script which deploys modules individually for better control and local file support.",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "placeholder",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": []
        }
      }
    },
        "parameters": {
          "logAnalyticsWorkspaceName": {
            "value": "[concat('<your-loganalytics-prefix>-', parameters('environment'))]"
          },
          "applicationInsightsName": {
            "value": "[concat('<your-appinsights-prefix>-', parameters('environment'))]"
          },
          "actionGroupName": {
            "value": "[concat('<your-action-group-prefix>-', parameters('environment'))]"
          },
          "actionGroupShortName": {
            "value": "[substring(concat('<youragprefix>', parameters('environment')), 0, 12)]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[parameters('tags')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "storageDeployment",
      "dependsOn": [
        "monitoringDeployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('templateBaseUrl'), 'modules/storage/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[concat('<yourstorageprefix>', parameters('environment'))]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[parameters('tags')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "eventHubDeployment",
      "dependsOn": [
        "monitoringDeployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('templateBaseUrl'), 'modules/event-hub/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "eventHubNamespaceName": {
            "value": "[concat('<your-eventhub-namespace>-', parameters('environment'))]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[parameters('tags')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "aiServicesDeployment",
      "dependsOn": [
        "monitoringDeployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('templateBaseUrl'), 'modules/ai-services/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "cognitiveServicesAccounts": {
            "value": "[parameters('cognitiveServicesAccounts')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[parameters('tags')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "integrationDeployment",
      "dependsOn": [
        "monitoringDeployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(variables('templateBaseUrl'), 'modules/integration/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "logicAppName": {
            "value": "[concat('<your-logicapp-name>-', parameters('environment'))]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[parameters('tags')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "resourceGroupLocation": {
      "type": "string",
      "value": "[resourceGroup().location]"
    }
  }
}

